<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.elixir.controller.CreateCharacterBackgroundController">
    <!-- Menu Lateral -->
    <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="260.0" spacing="17.0" style="-fx-background-color: #e7e4df;" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Ícone e texto do Menu Principal -->
        <HBox spacing="2.0">
            <ImageView fitHeight="30.0" fitWidth="30.0">
                <HBox.margin>
                    <Insets left="15.0" />
                </HBox.margin>
                <Image url="@../media/menuIcon.png" />
            </ImageView>
            <Text fill="#4b5c6b" strokeType="OUTSIDE" strokeWidth="0.0">
                MENU PRINCIPAL
                <font>
                    <Font size="16.0" />
                </font>
                <style>
                    -fx-font-weight: bold;
                    -fx-font-style: italic;
                </style>
                <HBox.margin>
                    <Insets top="4.0" />
                </HBox.margin>
            </Text>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>

        <!-- Botões -->
        <VBox alignment="CENTER" spacing="25.0">
            <Button fx:id="startPaneMenuButton" onAction="#startPaneMenuButtonAction" prefHeight="40.0" prefWidth="208.0" style="-fx-background-color: #897a5f; -fx-text-fill: white;" text="Tela Inicial" />
            <Button fx:id="myCharactersMenuButton" onAction="#myCharactersMenuButtonAction" prefHeight="40.0" prefWidth="208.0" style="-fx-background-color: #897a5f; -fx-text-fill: white;" text="Meus Personagens" />
            <Button fx:id="createNewCharacterMenuButton" onAction="#createNewCharacterMenuButtonAction" prefHeight="40.0" prefWidth="208.0" style="-fx-background-color: #897a5f; -fx-text-fill: white;" text="Criar nova ficha" />
            <padding>
                <Insets left="20.0" />
            </padding>
        </VBox>
        <padding>
            <Insets top="120.0" />
        </padding>
    </VBox>


    <!-- Cabeçalho superior -->
    <HBox alignment="CENTER_LEFT" prefHeight="114.0" prefWidth="1000.0" style="-fx-background-color: #434343;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <!-- Logo e texto -->
        <ImageView fitHeight="95.0" fitWidth="84.0" layoutX="10.0" layoutY="32.0">
            <image>
                <Image url="@../media/logoElixir.png" />
            </image></ImageView>

        <!-- Agrupar Line e Text em uma VBox -->
        <VBox alignment="CENTER_LEFT" layoutX="90.0" layoutY="32.0" spacing="5.0">
            <Text fill="#FFFFFF">
                ELIXIR MAKER
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
                <style>
                    -fx-font-style: italic;
                </style>
            </Text>
            <Line endX="120.0" stroke="WHITE" strokeWidth="3.0" />
            <padding>
                <Insets bottom="28.0" />
            </padding>
        </VBox>

        <!-- Nome de usuário e foto de perfil agrupados em uma HBox -->
        <HBox alignment="TOP_RIGHT" layoutX="752.0" layoutY="42.0" prefHeight="114.0" spacing="10.0" AnchorPane.rightAnchor="0.0" HBox.hgrow="ALWAYS">
            <!-- Nome de usuário e foto de perfil -->
            <Text fill="#FFFFFF">
                Nome de Usuário
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <style>
                    -fx-font-style: italic;
                </style>
            </Text>
            <ImageView fitHeight="35.0" fitWidth="35.0">
                <!-- Coloque aqui a imagem de perfil -->
                <clip>
                    <Circle centerX="17.5" centerY="17.5" radius="17.5" />
                </clip>
                <image>
                    <Image url="@../media/emptyPerfilImage.png" />
                </image>
            </ImageView>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </HBox>

    <!-- Corpo da página -->
    <VBox layoutX="260.0" layoutY="114.0" prefHeight="586.0" prefWidth="678.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="114.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-border-color: #897a5f; -fx-border-width: 3;" VBox.vgrow="ALWAYS">
            <children>
                <!-- Sessão de Botoões -->
               <HBox fx:id="sectionsVBoxContainer" alignment="CENTER" prefHeight="113.0" prefWidth="694.0">
                  <children>
                     <Button fx:id="dateSectionButton" onAction="#dateSectionButtonAction" prefHeight="40.0" prefWidth="104.0" style="-fx-border-color: #897a5f; -fx-border-radius: 3; -fx-background-color: TRASPARENT; -fx-text-fill: #897a5f;" text="DADOS">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                     <Line endX="-63.9071159362793" endY="0.09289246797561646" startX="-100.0" stroke="#4b5c6b" />
                     <Button fx:id="attributeSectionButton" onAction="#attributeSectionButtonAction" prefHeight="40.0" prefWidth="122.0" style="-fx-border-color: #897a5f; -fx-border-radius: 3; -fx-background-color: TRASPARENT; -fx-text-fill: #897a5f;" text="ATRIBUTOS">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                     <Line endX="-63.9071159362793" endY="0.09289246797561646" startX="-100.0" stroke="#4b5c6b" />
                     <Button fx:id="raceSectionButton" onAction="#raceSectionButtonAction" prefHeight="40.0" prefWidth="104.0" style="-fx-border-radius: 3; -fx-background-color: TRANSPARENT; -fx-text-fill: #897a5f; -fx-border-color: #897a5f;" text="RAÇA">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                     <Line endX="-63.9071159362793" endY="0.09289246797561646" startX="-100.0" stroke="#4b5c6b" />
                     <Button fx:id="classSectionButton" onAction="#classSectionButtonAction" prefHeight="40.0" prefWidth="104.0" style="-fx-border-radius: 3; -fx-background-color: TRANSPARENT; -fx-text-fill: #897a5f; -fx-border-color: #897a5f;" text="CLASSE">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                     <Line endX="-63.9071159362793" endY="0.09289246797561646" startX="-100.0" stroke="#4b5c6b" />
                     <Button fx:id="backgroundSectionButton" onAction="#backgroundSectionButtonAction" prefHeight="40.0" prefWidth="106.0" style="-fx-border-radius: 3; -fx-background-color: #897a5f; -fx-text-fill: WHITE;" text="HISTÓRIA">
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font>
                     </Button>
                  </children>
                  <padding>
                     <Insets left="20.0" right="20.0" />
                  </padding>
               </HBox>
                <!-- Corpo do Corpo da Página -->
                <Pane prefHeight="200.0" prefWidth="694.0" VBox.vgrow="ALWAYS">
                  <VBox alignment="CENTER" layoutX="431.0" layoutY="465.0" prefHeight="56.0" prefWidth="208.0">
                     <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="finishButton" mnemonicParsing="false" onAction="#finishButtonAction" prefHeight="41.0" prefWidth="113.0" style="-fx-background-color: #897a5f; -fx-border-radius: 3; -fx-border-width: 3; -fx-text-fill: WHITE;" text="CONCLUIR">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                    <Rectangle fill="#ced8e0" height="333.0" layoutX="51.0" layoutY="130.0" stroke="#788896" strokeWidth="2.0" width="593.0" />
                    <VBox alignment="CENTER" layoutX="81.0" layoutY="36.0" prefHeight="78.0" prefWidth="523.0" style="-fx-background-color: #e7e4df; -fx-border-color: #897a5f; -fx-border-width: 1.0;">
                         <children>
                            <HBox alignment="CENTER" prefHeight="70.0" prefWidth="477.0">
                               <children>
                              <Label prefHeight="70.0" prefWidth="366.0" text="HISTÓRIA DO PERSONAGEM" textFill="#4b5c6b">
                                 <font>
                                    <Font name="System Bold" size="26.0" />
                                 </font>
                              </Label>
                               </children>
                            </HBox>
                         </children>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                    </VBox>
                  <TextArea fx:id="apperanceField" layoutX="93.0" layoutY="153.0" prefHeight="286.0" prefWidth="508.0" style="-fx-border-color: #bbc3c94; -fx-border-radius: 0;" />
                </Pane>
            </children>
         </VBox>
      </children>
    </VBox>


</AnchorPane>
